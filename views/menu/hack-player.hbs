<h1>HACK PLAYERS</h1>

<table cellspacing="0" class="ladder-wanted">
    <tr>
        <th>Name</th>
        <th>Alliance</th>
        <th>Rank</th>
        <th>Hack</th>
    </tr>
    {{#each user}}
    <tr>
        <td>{{this.name}} </td>
        <td>{{this.alliance}} </td>
        <td>{{this.rank}} </td>
        <td>
            <form action="/hack/hack-player/:{{this._id}}">
            <button class="button">Hack!</button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>