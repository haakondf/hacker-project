<div class="container">
    <h1>SIGN UP</h1>
    <div id="sign-in">
    </div>
    <div class="flex-columns-notwrap">
        <div class="card-signin">
            <p id="writing">Sign up with email</p>
            <img src="/images/email.png" alt="email">

            <form action="/auth/sign-up" method='POST'>
                <input type="email" name='email' required='true'>
                <br>
                <input type="password" name='password'>
                <br>
                <br>
                <button type='submit' class="button">Sign a hacker up</button>
                <br>
                <br> {{#if error}}
                <p>ERROR: {{error}}</p>
                {{/if}}
            </form>
            <br>
            <br>
        </div>
        <div class="card-signin">
            <p id="writing">Sign up with Google</p>
            <a href="/auth/google">
                <img src="/images/google-flat.png" alt="googlesymbol">
            </a>
        </div>
    </div>
</div>